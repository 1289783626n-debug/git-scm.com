{
  "name": "git-scm",
  "version": "2.0.0",
  "homepage": "https://git-scm.com",
  "scripts": {
    "clean": "rimraf app/assets/stylesheets/index.css",
    "scss": "node-sass --output-style compressed -o app/assets/stylesheets app/assets/stylesheets/src/index.scss",
    "lint": "eslint js || true",
    "serve": "browser-sync start --proxy localhost:3000 --files \"app/assets/stylesheets/*.css, dist/*.js, **/*.html, !node_modules/**/*.html\"",
    "start": "serve .",
    "build:css": "run-s scss",
    "build:js": "run-s lint",
    "build": "run-s build:*",
    "watch:css": "onchange \"app/assets/stylesheets/src\" -- run-s build:css",
    "watch:js": "onchange \"js\" -- run-s build:js",
    "watch": "run-p serve watch:*"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "browser-sync": "^2.12.8",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.7.2",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "stylelint": "^7.8.0"
  }
}
